#!/bin/bash

set -ex

script/install-dotfiles

# Codespaces has some opinionated git config that we need to use.
test -f ${HOME}/.gitconfig.orig && cat ${HOME}/.gitconfig.orig >> dotfiles/gitconfig

sudo apt-get install -y \
  silversearcher-ag \
  tmux

# Do this last. If it fails, I'd rather have the other parts done.
config/nvim/install
config/neovim-packer/install
