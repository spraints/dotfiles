#!/bin/bash

set -e

script/install-dotfiles
# TODO fix git config?

git config --file=dotfiles/gitconfig --unset user.signingkey
git config --file=dotfiles/gitconfig --unset credential.helper
git config --file=dotfiles/gitconfig --unset url.git@github.com:.insteadof
git config --file=dotfiles/gitconfig --unset url.git@ghe.io:.insteadof
git config --file=dotfiles/gitconfig url.https://github.com/.insteadof git@github.com:

sudo apt-get install -y \
  neovim \
  silversearcher-ag
