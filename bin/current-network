#!/usr/bin/env ruby

require "json"

def main
  info = get_airport_info
  JSON.dump info, $stderr
  if ssid = info["SSID"]
    puts "#{ssid} (#{info["agrCtlRSSI"]}/#{info["agrCtlNoise"]})"
  elsif airport = info["AirPort"]
    puts "Airport #{airport}"
  else
    puts "unknown"
  end
end

def get_airport_info
  ap = '/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'
  info = {}
  IO.popen([ap, "-I"], "r") do |airport|
    until airport.eof?
      if airport.readline =~ /^\s*([^:]+): (.*)/
        info[$1] = $2
      end
    end
  end
  info
end

main
